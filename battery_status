#!/usr/bin/env sh

if [ "$(pmset -g batt)" = "Now drawing from 'AC Power'" ]
then
    echo ''
    exit
fi

prev_color="$1"
full_color="$2"
sep="$3"

charge=$(pmset -g batt | awk '/-InternalBattery-/ {sub(/%;/, "", $2); print $2}')

case "$charge" in
  [0-9])
    bg=colour196;;
  1[0-9])
    bg=colour202;;
  2[0-9])
    bg=colour214;;
  3[0-9])
    bg=colour220;;
  4[0-9])
    bg=colour45;;
  5[0-9])
    bg=colour63;;
  6[0-9])
    fg=white
    bg=colour20;;
  7[0-9])
    fg=white
    bg=colour25;;
  8[0-9])
    bg=colour35;;
  9[0-9])
    bg=colour85;;
  100)
    bg=$full_color;;
esac

status=$(pmset -g batt | awk '/-InternalBattery-/ {sub(/;/, "", $3); print $3}')

case "$status" in
  "charging")
    output="$charge\xe2\x9a\xa1\xef\xb8\x8f ";;
  "charged")
    output='\xe2\x9c\xa8 ';;
  *)
    output="$charge%";;
esac

fg=${fg:-black}

echo "#[fg=$bg,bg=$prev_color]$sep#[fg=$fg,bg=$bg]$output"
